<div id="wrapper">
  <div id="sidebar-wrapper" class="sidebar">
    {{filter-bar
      filterTag=(action "selectTags")
      filter=(action "filter")
      games=filteredGames
      tags=topTags
      filters=filters
    }}

    <div class="hidden-link">
      <a href="/hidden">({{hiddenCount}} hidden)</a>
    </div>
  </div>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        {{games-list
          games=filteredGames
          filterTag=(action "clickTag")
          toggleStar=(action "toggleStar")
          toggleHide=(action "toggleHide")
        }}
      </div>
    </div>
  </div>
</div>
