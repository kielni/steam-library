<div id="wrapper">
  <div id="sidebar-wrapper" class="sidebar">
    {{filter-bar
      filter=(action "onFilter")
      games=filteredGames
      tags=topTags
      filters=filters
    }}
  </div>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        {{games-list
          games=filteredGames
          filterTag=(action "filterTag")
          toggleStar=(action "toggleStar")
          toggleHide=(action "toggleHide")
        }}
      </div>
    </div>
  </div>
</div>
