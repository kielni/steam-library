<div class="row">

{{#vertical-collection
    games
    estimateHeight=400
    bufferSize=6
    staticHeight=false
    containerSelector="body"
    as |game|}}
  <div class="col-md-4">
    {{game-card
      game=game
      filterTag="filterTag"
      toggleStar=(action toggleStar)
      toggleHide=(action toggleHide)
    }}
  </div>
{{/vertical-collection}}
</div>
